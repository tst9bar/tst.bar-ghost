<nav class="pagination" aria-label="{{t "Pagination"}}">
	<div class="inner">
		<div class="box pagination-box">
			{{#if prev}}
			<a title="{{t "Newer Posts"}}" class="pagination-next" href="{{page_url prev}}">
				<i class="icon icon-arrow-left"></i> 
				<span class="pagination-label">{{t "Newer Posts"}}</span>
			</a>
			{{/if}}
			<span class="pagination-info">{{t "Page {page} / {pages}" page=page pages=pages}}</span>
			{{#if next}}
			<a title="{{t "Older Posts"}}" class="pagination-prev" href="{{page_url next}}">
				<span class="pagination-label">{{t "Older Posts"}}</span> 
				<i class="icon icon-arrow-right"></i>
			</a>
			{{/if}}
		</div>
	</div>
</nav>
<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<a href="#" id="load-posts" data-posts_per_page="6" class="btn visible">Load more posts</a>
		</div>
	</div>
</div>
